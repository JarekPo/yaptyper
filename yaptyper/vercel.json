{
  "version": 2,
  "builds": [
    {
      "src": "yaptyper/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }
  ],
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "yaptyper/wsgi.py"
    }
  ],
  "headers": [
    {
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Content-Type": "text/css",
        "source": "/staticfiles/*"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/staticfiles/*",
      "destination": "/public/"
    }
  ]
}
